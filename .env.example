####################################
# VidEditor (Fly.io + Neon + Tigris)
# 2-Process Architecture: Next.js App + Job Runner
####################################

# ---------- Next.js App (Frontend + API Routes) ----------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------- Clerk Authentication ----------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/projects
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/projects

# ---------- Stripe ----------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# ---------- Shared Database Config ----------
# Neon Postgres connection string (used by both Next.js and Job Runner)
DATABASE_URL=postgres://user:password@ep-sample.neon.tech/videditor

# ---------- Tigris Object Storage ----------
# Used by both Next.js (presigned uploads) and Job Runner (download/upload)
TIGRIS_ENDPOINT=https://fly.storage.tigris.dev
TIGRIS_REGION=auto
TIGRIS_BUCKET=your-bucket-name
TIGRIS_ACCESS_KEY_ID=tid_xxxxxxxxxxxxx
TIGRIS_SECRET_ACCESS_KEY=tsec_xxxxxxxxxxxxx

# ---------- Job Runner ----------
JOB_CONCURRENCY=1
POLL_INTERVAL_MS=10000
FFMPEG_BINARY=/usr/bin/ffmpeg

# ---------- AI/LLM Services ----------
# OpenRouter API key for AI-powered short generation
OPENROUTER_API_KEY=sk-or-v1-...
