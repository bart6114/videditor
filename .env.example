# ===================================
# Cloudflare VidEditor Configuration
# ===================================

# -----------------
# Next.js Frontend
# -----------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WORKER_URL=http://localhost:8787

# -----------------
# Clerk Authentication
# -----------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
# JWT public key for networkless verification in Cloudflare Workers
# Get from: Clerk Dashboard → API Keys → Advanced → Session token template → PEM Public Key
CLERK_JWT_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/projects
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/projects

# -----------------
# Cloudflare (for wrangler.toml)
# -----------------
# Get these from: https://dash.cloudflare.com
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# -----------------
# Cloudflare Stream
# -----------------
# Get API key from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_STREAM_API_KEY=your-stream-api-key

# -----------------
# R2 Storage
# -----------------
# Create R2 API token: https://dash.cloudflare.com/profile/api-tokens
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_ACCOUNT_ID=your-account-id

# -----------------
# Stripe Payments
# -----------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_... # Create a subscription price in Stripe

# -----------------
# D1 Database
# -----------------
# Created via: wrangler d1 create videditor-db
# Database ID and name are set in wrangler.toml
